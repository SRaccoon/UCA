<% include ../base/header.ejs %>
<section>
    <section>
        <div class="container">
            <div>
                <h1 class="text-center display-4" style="margin-top:15%">수정하기</h1>
                <form action="/posts/edit/<%= post._id %>" method="post" class="mt-5">
                    <div class="form-group w-50 mx-auto">
                        <label for="title">글제목</label>
                        <input class="form-control" type="text" id="title" name="title" value="<%= post.title %>">
                    </div>
                    <div class="form-group w-50 mx-auto">
                        <label for="body">본문</label>
                        <input type="text" name="body" class="form-control" style="height: 20vh" id="body" value="<%= post.body %>">
                    </div>
                    <div class="w-50 mx-auto text-right">
                        <div class="btn-group">
                            <button id="insert" type="submit" class="btn btn-primary">저장</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>
<% include ../base/footer.ejs %>